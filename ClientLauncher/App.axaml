<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ClientLauncher"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="ClientLauncher.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <themes:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Amber"/>
    </Application.Resources>
    <Application.Styles>
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
        <StyleInclude Source="avares://Material.Colors/Themes/MaterialDesignColor.Grey.Named.xaml"></StyleInclude>
        <StyleInclude Source="avares://Material.Colors/Themes/MaterialDesignColor.DeepPurple.Named.xaml"></StyleInclude>
        <StyleInclude Source="avares://Material.Colors/Themes/MaterialDesignColor.Green.Named.xaml"></StyleInclude>
        <StyleInclude Source="avares://Material.Colors/Themes/MaterialDesignColor.Red.Named.xaml"></StyleInclude>
    </Application.Styles>
</Application>
